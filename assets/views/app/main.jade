.container
  .panel.panel-default
    .panel-heading
      h4.panel-title
        a(data-toggle='collapse' href='#panel-metadata') 参数
    #panel-metadata.panel-collapse.collapse
      form.form-horizontal.panel-body
        .page-header
          h3 基础
        .form-group
          label.control-label.col-xs-1(for='input-height') 深度
          .col-xs-3
            .input-group
              input#input-height.form-control(type='text' ng-model='metadata.height')
              span.input-group-addon K
        .form-group
          label.control-label.col-xs-1(for='input-width') 长度
          .col-xs-3
            .input-group
              input#input-width.form-control(type='text' ng-model='metadata.width')
              span.input-group-addon K
        .form-group
          label.control-label.col-xs-1(for='input-layer') 高度
          .col-xs-3
            .input-group
              input#input-layer.form-control(type='text' ng-model='metadata.layer')
              span.input-group-addon P
        .form-group
          label.control-label.col-xs-1(for='input-scale') 缩放
          .col-xs-3
            input#input-scale.form-control(type='text' ng-model='metadata.scale')

        .page-header
          h3 房间布置
        .form-group
          h4.col-xs-12(ng-repeat='layer in metadata.rooms') 第{{defines.numbers[$index]}}层
            p ……

        .page-header
          h3 选项
        .form-group
          label.control-label.col-xs-1(for='input-stairs') 楼梯
          .col-xs-3
            .checkbox-inline
              label
                input(type='checkbox' ng-model='metadata.options.stairs.left')
                | 左
            .checkbox-inline
              label
                input(type='checkbox' ng-model='metadata.options.stairs.right')
                | 右

  ul.nav.nav-tabs
    li
      a(href='#blueprint-foundation' data-toggle='tab') 基础图
    li
      a(href='#blueprint-side' data-toggle='tab') 侧视图
    li.active
      a(href='#blueprint-flat' data-toggle='tab') 平面布置图

  .tab-content.blueprints
    #blueprint-foundation.tab-pane
      blueprint-foundation
    #blueprint-side.tab-pane
      blueprint-side
    #blueprint-flat.tab-pane.active
      blueprint-flat(ng-repeat='rooms in metadata.rooms' layer='{{$index}}')

  #modal-flat.modal
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal')
            span(aria-hidden='true') &times;
          h4.modal-title title
        .modal-body
          p hello
